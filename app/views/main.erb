<h1>Matematik Memes Scoreboard</h1>

<% if !@posts.nil? %>
    <% @posts.each do |post| %>
        <div class="card">
            <div class="card-body">
                <h5 class="card-title"><%= post.message %></h5>
                <p class="card-text"><small class="text-muted"><%= post.created_time.strftime("%d %B at %H:%M") %></small></p>
                <p class="card-text"><small class="text-muted"><%= pluralize("reaction", post.reactions) %></small></p>
                <p class="card-text"><small class="text-muted"><%= pluralize("comment", post.comments) %></small></p>
                <% if !post.link.nil? %>
                    <a href=<%= post.link %>>link</a>
                <% end %>
            </div>
            <% if post.picture != "" %>
                <img src=<%= post.picture %> class="card-img-top" alt="...">
            <% end %>
        </div>
    <% end %>
<% end %>
