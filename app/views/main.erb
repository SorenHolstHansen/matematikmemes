<h1>Matematik Memes Scoreboard</h1>

<% if !@posts.nil? %>
    <% @posts.each do |post| %>
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Name</h5>
                <p class="card-text"><%= post["message"] %></p>
                <p card-text><small class="text-muted"><%= post["created_time"] %></small></p>
                <p card-text><small class="text-muted">reactions</small></p>
                <a href="link"></a>
            </div>
            <img src=<%= post["full_picture"] %> class="card-img-top" alt="...">
        </div>
    <% end %>
<% end %>
